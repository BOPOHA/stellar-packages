# file: /etc/logrotate.d/stellar-core-postgres
# delete local history if it exists
# it is similar to daily crontab: find /var/lib/stellar/core/history/ -type f -mtime +1 -delete
/var/lib/stellar/core/history/*/*/*/*/*.gz {
    missingok
    rotate 0
    daily
    maxage 1
}

/var/lib/stellar/core/history/history/*/*/*/*.json {
    missingok
    rotate 0
    daily
    maxage 1
}
